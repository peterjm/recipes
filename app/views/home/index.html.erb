<% set_page_title "Welcome to Mealtime" %>

<% content_for :javascript do %>
  <script>
    $(document).ready(function(){
      $(".home-carousel-posts").owlCarousel({
        items: 4,
        paginationSpeed: 300,
        rewindSpeed: 400
      });
    });
  </script>
<% end %>

<div class="rw-column rw-content">

  <div class="rw-row subtle large home-recipe-of-the-day">
    <%= render 'featured_recipe', recipe: @recipes.first if @recipes.first %>
  </div>

  <div class="rw-row subtle large border-bottom">
    <%= render 'recipes/recipe_section', title: 'Featured recipes', recipes: @recipes %>
  </div> <!-- .rw-row -->

  <div class="rw-row subtle large">
    <%= render 'recipes/recipe_section', title: 'Latest recipes', recipes: @recipes %>
  </div> <!-- .rw-row -->

</div>
