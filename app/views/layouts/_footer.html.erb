<div class="rw-section rw-footer">
  <div class="rw-inner clearfix">
    <div class="grid-container">

      <div class="grid desk-6">
        <div class="footer-totals clearfix">

          <div class="total red clearfix">
            <%= link_to recipes_path do %>
              <span class="mark value"><%= Recipe.count %></span>
              <span class="type">Recipes</span>
            <% end %>
          </div>

          <div class="total green clearfix">
            <%= link_to ingredients_path do %>
              <span class="mark value"><%= Ingredient.count %></span>
              <span class="type">Ingredients</span>
            <% end %>
          </div>

          <div class="total blue clearfix">
            <%= link_to sources_path do %>
              <span class="mark value"><%= Source.count %></span>
              <span class="type">Sources</span>
            <% end %>
          </div>

        </div>
      </div>

      <div class="grid desk-6">
        <div class="footer-menu">
          <ul>
            <li><a href="#">Terms</a></li>
            <li><a href="#">Privacy</a></li>
            <li><a href="#">Copyright</a></li>
            <li><a href="#">About</a></li>
            <li><a href="#">Contact</a></li>
          </ul>
        </div>
      </div>

    </div>
    <a class="footer-to-top" title="Go to top" bind-event-click="utils.scrollTo('#rw-layout', 500)">
      <i class="fa fa-chevron-up"></i>
    </a>
  </div>
</div> <!-- .layout-footer -->
