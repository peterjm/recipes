html {
  height: 100%;
}

body {
  height: 100%;
}

div#layout {
  height: 100%;
}

.centered {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

div#layout {
  border-style: solid;
  border-width: 5px 0 0 0;
  border-color: #9ABCA7;
}

.hide {
  display: none;
}

img.full {
  width: 100%;
}

/* Side menu*/
.pure-menu-disabled {
  padding: inherit;
}

/* Inplace Editor */
h2 .inplace-editor-edit {
  display:none;
}
h2:hover span.inplace-editor-edit {
  display:inline;
}

/* Buttons */
.button-xlarge {
  font-size: 150%;
}
