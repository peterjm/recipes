html {
  height: 100%;
}

body {
  height: inherit;
}

.centered {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.hide {
  display: none;
}

a {
  text-decoration: none;
}

.bg-cover {
  display: block;
  width: 100%;
  height: 100%;
  background-size: cover;
  background-position: center;
}

.header {
  padding-top: 0.5em;
  margin-bottom: 1em;
}

.content-subhead {
  margin: 1em 0 0.5em 0;
}

/* colored border on top */
body {
  border-style: solid;
  border-width: 0.3em 0 0 0;
  border-color: #9ABCA7;
}

#menu, .menu-link {
  top: 0.3em;
}

/* Forms */

@media screen and (min-width: 35.5em) {
  .form-label {
    width: 80%;
    padding-right: 20%;
    text-align: right;
  }
}

.form-label {
  display: inline-block;
  margin-top: 0.2em;
}

.form-field {
  display: inline-block;
  margin-bottom: 0.7em;
}

.form-aligned .form-field {
  width: 100%;
}

input[type="text"], input[type="search"], textarea, select {
  width: 100%;
}

/* Search */
.search {
  padding: 1em 0;
  width: 100%;
  text-align: center;
}

.search .form-field {
  width: 80%;
}

/* Side menu */
.pure-menu-disabled {
  padding: inherit;
}

/* Inplace Editor */
h2 .inplace-editor-edit {
  display:none;
}
h2:hover span.inplace-editor-edit {
  display:inline;
}

/* Buttons */
.button-xlarge {
  font-size: 150%;
}

/* Recipe index */
.recipe-preview {
  height: 10em;
}

.recipe-title {
  color: white;
  padding: 0.2em;
  background-color: rgba(0, 0, 0, 0.5);
  text-align: center;
}

/* Recipe show */
.recipe-main-image {
  position: relative;
  height: 10em;
}

@media screen and (min-width: 35.5em) {
  .recipe-main-image {
    height: 20em;
  }
}

ul.ingredients-list {
  list-style-type: none;
  padding-left: 0;
  margin: 0;
}

ul.ingredients-list li {
  padding-bottom: 0.5em;
}

ul.ingredients-list li:last-of-type {
  padding-bottom: 0;
}

.ingredient-note {
  font-size: 80%;
  line-height: 80%;
}

.recipe-source h2 {
  margin: 0;
}

.recipe-source img {
  float: left;
  margin-right: 0.5em;
}

.recipe-source .author {
  font-size: 80%;
  line-height: 80%;
}

.recipe-source .recipe-count {
  display: block;
}

.recipe-source.listing {
  margin: 0.8em 0;
}

.recipe-flag {
  position: absolute;
  top: 0.5em;
  right: 0.5em;
  font-size: 2em;
}

.recipe-flag button {
  background-color: inherit;
  border: none;
  padding: 0;
  margin: 0;
  color: inherit;
}

.recipe-flag.active button {
  color: #ffd700;
}

/* Image picker */
.image-upload-widget {
  display: inline-block;
}

.image-upload-widget .visible-content {
  display: inline-block;
  vertical-align: middle;
  margin-bottom: -0.5em;
}

.image-upload-widget .image {
  display: inline-block;
  position: relative;
  width: 5em;
  height: 5em;
  margin-right: 0.5em;
  margin-bottom: 0.5em;
  float: left;
}

.image-upload-widget .image .remove {
  visibility: hidden;
  position: absolute;
  bottom: 0.2em;
  right: 0.2em;
  width: 1.8em;
  height: 1.8em;
  color: #eb5858;
  background: #fff;
  cursor: pointer;
}

.image-upload-widget .image:hover .remove {
  visibility: visible;
}

.image-upload-widget .image .remove:hover {
  color: #fff;
  background: #eb5858;
}

.image-upload {
  display: inline-block;
  border: 2px dashed #c8c9d3;
  color: #c8c9d3;
  font-size: 2em;
  width: 2.5em;
  height: 2.5em;
  cursor: pointer;
  box-sizing: border-box;
  float: left;
  margin-bottom: 0.25em;
}

/* Ingredients index */
ul.all-ingredients {
  list-style-type: none;
  margin: 0;
  padding: 0;
  display: inline;
}

ul.all-ingredients li {
  display: inline;
  margin: 0.3em 0.5em;
}
.all-ingredients li.hide {
  display: none;
}
